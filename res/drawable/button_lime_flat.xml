<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:drawable="@drawable/button_bottom" />
  <item
    android:top="2dp"
    android:bottom="2dp"
    android:left="2dp"
    android:right="2dp" >
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
      <!-- ボタンが押されたときの定義 -->
      <item android:state_pressed="true" >
        <shape
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:shape="rectangle">
          <solid android:color="#6000ff00" />
          <stroke
            android:width="1dp"
            android:color="@color/lime" />
          <corners android:radius="5dp" />
          <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
          <size
            android:height="30dp"
            android:width="30dp" />
        </shape>
      </item>
      
      <!-- ボタンが押されていないときの定義 -->
      <item android:state_pressed="false">
        <shape
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:shape="rectangle">
            <solid android:color="#00000000" />
            <stroke
              android:width="1dp"
              android:color="@color/lime" />
            <corners android:radius="5dp" />
            <padding
              android:left="10dp"
              android:top="10dp"
              android:right="10dp"
              android:bottom="10dp" />
              <size
                android:height="30dp"
                android:width="30dp" />
        </shape>
      </item>
      
    </selector>
    
  </item>
  
</layer-list>